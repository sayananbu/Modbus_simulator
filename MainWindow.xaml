                    Grid.Column="2"
                    Background="White" BorderBrush="White"
                    Margin="5"
                    FontSize="15"
                    BorderThickness="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    >
                    <ComboBoxItem
                        Content="Select port"
                        IsSelected="True"
                        />
                </ComboBox>

