            Grid.ColumnSpan="3"
            Grid.Column="0"
            Height="auto"
            Width="600"
            Margin="10 10"
            Background="#C2F3BE"
            CornerRadius="5"
            HorizontalAlignment="Left"
            BorderThickness="1"
            BorderBrush="#000"
            >
