                    Grid.Column="1"
                    Grid.Row="0"
                    TextAlignment="Center"
                    Height="auto"
                    Text="Serial Port:"
                    FontSize="17"
                    VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="3"
                    Grid.Row="0"
                    TextAlignment="Center"
                    Height="auto"
                    Text="Baud:"
                    FontSize="17"
                    VerticalAlignment="Center"
                    />
