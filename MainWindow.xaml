                    Grid.Column="4"
                    Grid.Row="1"
                    Background="White" BorderBrush="White"
                    Margin="5"
                    FontSize="15"
                    BorderThickness="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    >
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"
